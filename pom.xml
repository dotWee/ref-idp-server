<?xml version="1.0" encoding="UTF-8"?>
<project xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://maven.apache.org/POM/4.0.0"
    xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>

    <parent>
        <artifactId>spring-boot-starter-parent</artifactId>
        <groupId>org.springframework.boot</groupId>
        <version>2.6.3</version>
    </parent>

    <groupId>de.gematik.idp</groupId>
    <artifactId>idp-global</artifactId>
    <version>19.3.0</version>
    <packaging>pom</packaging>


    <description>IDP</description>

    <modules>
        <module>idp-crypto</module>
        <module>idp-test</module>
        <module>idp-commons</module>
        <module>idp-client</module>
        <module>idp-server</module>
        <module>idp-sektoral</module>
        <module>idp-fedmaster</module>
        <module>idp-fachdienst</module>
        <module>idp-testsuite</module>
        <module>idp-report</module>
    </modules>

    <organization>
        <name>gematik GmbH</name>
        <url>http://www.gematik.de</url>
    </organization>

    <dependencyManagement>
        <dependencies>
            <dependency>
                <artifactId>bcpkix-jdk15on</artifactId>
                <groupId>org.bouncycastle</groupId>
                <version>${version.bouncycastle.bcpkix}</version>
            </dependency>
            <dependency>
                <groupId>de.gematik.pki</groupId>
                <artifactId>gemLibPki</artifactId>
                <version>0.5.2</version>
            </dependency>
            <dependency>
                <artifactId>aforeporter</artifactId>
                <groupId>de.gematik.idp.aforeporter</groupId>
                <version>1.2.1</version>
            </dependency>
            <dependency>
                <groupId>de.gematik</groupId>
                <artifactId>rbellogger</artifactId>
                <version>${version.rbellogger}</version>
                <exclusions>
                    <exclusion>
                        <groupId>jnetpcap</groupId>
                        <artifactId>jnetpcap</artifactId>
                    </exclusion>
                </exclusions>
            </dependency>
            <dependency>
                <groupId>ch.qos.logback</groupId>
                <artifactId>logback-core</artifactId>
                <version>${version.logback}</version>
            </dependency>
            <dependency>
                <groupId>ch.qos.logback</groupId>
                <artifactId>logback-classic</artifactId>
                <version>${version.logback}</version>
            </dependency>
        </dependencies>
    </dependencyManagement>

    <properties>
        <docker.image.name.smartcard>gstopdr1.top.local/idp/idp-server</docker.image.name.smartcard>
        <docker.image.name.sektoralidp>gstopdr1.top.local/idp/idp-sektoral</docker.image.name.sektoralidp>
        <docker.image.name.fedmaster>gstopdr1.top.local/idp/idp-fedmaster</docker.image.name.fedmaster>
        <docker.image.name.fachdienst>gstopdr1.top.local/idp/idp-fachdienst</docker.image.name.fachdienst>
        <java.version>11</java.version>
        <mpir.skip>true</mpir.skip>
        <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
        <project.reporting.outputEncoding>UTF-8</project.reporting.outputEncoding>

        <sonar.coverage.jacoco.xmlReportPaths>${project.basedir}/../idp-report/target/site/jacoco-aggregate/jacoco.xml
        </sonar.coverage.jacoco.xmlReportPaths>
        <sonar.dynamicAnalysis>reuseReports</sonar.dynamicAnalysis>
        <sonar.java.coveragePlugin>jacoco</sonar.java.coveragePlugin>
        <sonar.language>java</sonar.language>

        <version.bouncycastle.bcpkix>1.69</version.bouncycastle.bcpkix>
        <version.build-helper-maven-plugin>3.2.0</version.build-helper-maven-plugin>
        <version.jsoniter>0.9.23</version.jsoniter>
        <version.lombok>1.18.16</version.lombok>
        <version.tiger>0.19.4</version.tiger>
        <version.rbellogger>0.23</version.rbellogger>
        <version.maven-clean-plugin>3.1.0</version.maven-clean-plugin>
        <version.maven-compiler-plugin>3.8.1</version.maven-compiler-plugin>
        <version.maven-jar-plugin>3.2.0</version.maven-jar-plugin>
        <version.maven-javadoc-plugin>3.0.1</version.maven-javadoc-plugin>
        <version.docker-maven-plugin>0.34.1</version.docker-maven-plugin>
        <version.logback>1.2.9</version.logback>

        <!-- only needed for mvn site to avoid stack traces flooding the console -->
        <version.maven-resources-plugin>3.0.2</version.maven-resources-plugin>

        <!-- settings for upload to sonar server -->
        <version.maven-source-plugin>3.0.1</version.maven-source-plugin>
        <version.maven-surefire-plugin>2.22.2</version.maven-surefire-plugin>
        <version.spring-boot>2.6.3</version.spring-boot>
        <version.test.regex>none</version.test.regex>
    </properties>

    <build>
        <plugins>
            <!-- Phase clean -->
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-clean-plugin</artifactId>
                <version>2.5</version>
                <configuration>
                    <filesets>
                        <!-- delete logfiles -->
                        <fileset>
                            <directory>logs</directory>
                            <includes>
                                <include>**/*</include>
                            </includes>
                            <followSymlinks>false</followSymlinks>
                        </fileset>
                    </filesets>
                </configuration>
            </plugin>
            <!-- remove only needed for mvn site runs -->
            <plugin>
                <artifactId>maven-site-plugin</artifactId>
                <groupId>org.apache.maven.plugins</groupId>
                <version>3.9.1</version>
            </plugin>
            <plugin>
                <artifactId>maven-project-info-reports-plugin</artifactId>
                <groupId>org.apache.maven.plugins</groupId>
                <version>3.1.1</version>
            </plugin>


            <!-- to remove docker images call mvn docker:remove -Ddocker.removeNamePattern=idp-* -->
            <plugin>
                <artifactId>maven-surefire-plugin</artifactId>
                <configuration>
                    <argLine>${surefireArgLine} -Dfile.encoding=UTF-8</argLine>
                    <skipTests>${skip.unittests}</skipTests>
                </configuration>
                <groupId>org.apache.maven.plugins</groupId>
                <version>3.0.0-M3</version>
            </plugin>
            <plugin>
                <artifactId>jacoco-maven-plugin</artifactId>
                <executions>
                    <execution>
                        <configuration>
                            <append>true</append>
                            <destFile>${project.basedir}/target/jacoco.exec</destFile>
                            <excludes>
                                <exclude>de.gematik.idp.tests.*</exclude>
                            </excludes>
                            <propertyName>surefireArgLine</propertyName>
                        </configuration>
                        <goals>
                            <goal>prepare-agent</goal>
                        </goals>
                        <id>default-prepare-agent</id>
                    </execution>
                </executions>
                <groupId>org.jacoco</groupId>
                <version>0.8.5</version>
            </plugin>

            <!-- to upload jacoco results to sonar server via mvn sonar:sonar-->
            <plugin>
                <artifactId>sonar-maven-plugin</artifactId>
                <groupId>org.sonarsource.scanner.maven</groupId>
                <version>3.7.0.1746</version>
            </plugin>
        </plugins>
    </build>

</project>
