<?xml version="1.0" encoding="UTF-8"?>
<project xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xmlns="http://maven.apache.org/POM/4.0.0"
    xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>
    <parent>
        <artifactId>idp-global</artifactId>
        <groupId>de.gematik.idp</groupId>
        <version>21.0.12</version>
    </parent>
    <artifactId>idp-report</artifactId>


    <dependencies>
        <dependency>
            <artifactId>idp-testsuite</artifactId>
            <groupId>de.gematik.idp</groupId>
            <scope>test</scope>
            <version>${project.version}</version>
        </dependency>
        <dependency>
            <artifactId>idp-test</artifactId>
            <groupId>de.gematik.idp</groupId>
            <version>${project.version}</version>
        </dependency>
        <dependency>
            <artifactId>idp-server</artifactId>
            <groupId>de.gematik.idp</groupId>
            <version>${project.version}</version>
        </dependency>
        <dependency>
            <artifactId>idp-crypto</artifactId>
            <groupId>de.gematik.idp</groupId>
            <version>${project.version}</version>
        </dependency>
        <dependency>
            <artifactId>idp-commons</artifactId>
            <groupId>de.gematik.idp</groupId>
            <version>${project.version}</version>
        </dependency>
        <dependency>
            <artifactId>idp-client</artifactId>
            <groupId>de.gematik.idp</groupId>
            <version>${project.version}</version>
        </dependency>
    </dependencies>

    <build>
        <plugins>
            <plugin>
                <groupId>org.jacoco</groupId>
                <artifactId>jacoco-maven-plugin</artifactId>
                <version>${version.jacoco-maven-plugin}</version>
                <executions>
                    <execution>
                        <id>jacoco-report-aggregate</id>
                        <configuration>
                            <excludes>
                                <exclude>de.gematik.idp.tests.*</exclude>
                            </excludes>
                        </configuration>
                        <goals>
                            <goal>report-aggregate</goal>
                        </goals>
                        <phase>verify</phase>
                    </execution>
                </executions>
            </plugin>
        </plugins>
    </build>


</project>
